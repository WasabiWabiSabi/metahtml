  function popupwindow(url, title, w, h) {
  var left = (screen.width/2)-(w/2);
  var top = (screen.height/2)-(h/2);
  return window.open(url, title, 'toolbar=no, location=no, directories=no, status=no, menubar=no, scrollbars=no, resizable=no, copyhistory=no, width='+w+', height='+h+', top='+top+', left='+left);
}

  function is_touch_device() {
      return (('ontouchstart' in window)
	   || (navigator.MaxTouchPoints > 0)
	   || (navigator.msMaxTouchPoints > 0));
     }

  jQuery(document).ready(function($) {
	 /*Right column ads*/
	 $(".right-column-ads").height($( document ).height());
	var right_ads_num=$('.right_ads_num').val();
	$('[class^="sticky_right_ads_wrapper"]').height($(".right-column-ads").height()/right_ads_num);
	new $.Zebra_Pin($('#sticky_right_ads1'), {contain: true});
	new $.Zebra_Pin($('#sticky_right_ads2'), {contain: true});
	new $.Zebra_Pin($('#sticky_right_ads3'), {});
     /* Start HP 28/01/2017 */
     var swidth = $(window).width();
     if (swidth > 1091) swidth = 0.5*swidth;
     var sheight = $(window).height();
     $("#search_dialog").dialog({
      width:swidth,
      height:sheight,
          autoOpen: false,
          modal: true,
          dialogClass:'titlebar-dialog',
          close:function(){
             $('body').removeClass('stop-scrolling');
          }

     });
     $('.searchbutton').on("click", function () {
	  $(".nav-text-dropdown").hide(); //HP 28//08/2018 hide menu when searching
	  $(".nav-dropdown").hide();	 
      $("#search_dialog" ).dialog('open');
      $(".ui-dialog-titlebar").show();
      $('body').addClass('stop-scrolling');
     });
     /* end HP 28/01/2017 */
     $("#dialog").dialog({
          autoOpen: false,
          modal: true,
          buttons: {
             Close: function() {
               $( this ).dialog( "close" );
            }
         }
      });

    $(".load-more").click(function()
    {
      if ($('.loadmore_icon:contains("LOAD MORE")').length > 0) //HP 23 April 2017
       loadMoreContent();

    });

    $('.addthis_sharing_toolbox').click(function()
   {

      $("#dialog").dialog('close');

   });

    $('.count-and-like').click(function()
    {
      var shareurl=$(this).find('.shareurl').val();
      var title=$(this).find('#article_title').val();

      $('#dialog').find('#dialog_title').html(title);
      $('#dialog').find('.addthis_sharing_toolbox').attr('data-url',shareurl);
      $('#dialog').find('.addthis_sharing_toolbox').attr('data-title',title);
      window.addthis.update('share', 'url', shareurl);
      window.addthis.update('share', 'title', title);
      $("#dialog" ).dialog('open');
      $(".ui-dialog-titlebar").hide();

    });

    function loadMoreContent() {    
    var start=$('.listlayout:last').find('.articlestart:last').val();
		if (start == null) return; //HP 12/03/2019
		$('.loadmore_icon').html('<div class="img-container"><img src="/images/sciencealert_system/load_more.png">&nbsp;&nbsp;LOADING ...</div>');
    var currentsection=$('.currentsection:last').val();
	var cat_title=$('.cat_title').val();
	
	var loadurl= "index.php?option=com_sciencealertfrontpage&view=latestarticles&start="+start+"&cat_title="+cat_title+"&tmpl=component";
	var perpetual = getQueryVariable('perpetual'); 
	if (perpetual == 'yes')
		loadurl+="&perpetual=yes&limitstart=1";
	function getQueryVariable(variable)
	{
       var query = window.location.search.substring(1)
       var vars = query.split("&");
       for (var i=0;i<vars.length;i++) {
               var pair = vars[i].split("=");
               if(pair[0] == variable){return pair[1];}
       }
       return(false);
	}

     $.ajax({
                    type: 'POST',
                    url: loadurl,

                    success:function(data){
                        var $response=$(data);
                        var result = $response.filter('.component-content').html();
                        $('.load-more').before(result);
                        $('.count-and-like').click(function()
                        {
                         var shareurl=$(this).find('.shareurl').val();
                         var title=$(this).find('#article_title').val();

                         $('#dialog').find('#dialog_title').html(title);
                         $('#dialog').find('.addthis_sharing_toolbox').attr('data-url',shareurl);
                         $('#dialog').find('.addthis_sharing_toolbox').attr('data-title',title);
                         window.addthis.update('share', 'url', shareurl);
                         window.addthis.update('share', 'title', title);
                         $("#dialog" ).dialog('open');


                        });

			           $('.loadmore_icon').html('<div class="img-container"><img src="/images/sciencealert_system/load_more.png">&nbsp;&nbsp;LOAD MORE</div>');

                    },
                    error:function(){
                        alert("Error! Could not read data.")
                    }
                });
  }
  
});
</script>
