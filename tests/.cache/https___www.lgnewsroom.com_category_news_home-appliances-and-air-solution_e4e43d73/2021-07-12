    function go_selected_sort(sort_type) {
        var f = document.frm_loc;
        var target_url  =   "";

        if(sort_type == "" || sort_type == undefined) {
            alert("Please select a sorting method");
            return;
        } else{
            target_url  =   $("#sub_location_target option:selected").val();
            document.location.href=target_url+"&ob="+sort_type;
        }
    }
</script>
